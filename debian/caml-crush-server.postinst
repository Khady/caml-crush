#!/bin/sh
set -e

setup_pkcs11proxyd_user() {
        if ! getent passwd Debian-pkcs11proxyd >/dev/null; then
                adduser --system --group --quiet --home /var/lib/pkcs11proxyd \
                        --force-badname Debian-pkcs11proxyd
        fi
}

if [ "$action" = configure ]; then
	setup_pkcs11proxyd_user
fi

#DEBHELPER#

exit 0
